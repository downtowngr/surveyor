<h1>Events</h1>

<% if @events.count > 0 %>
<table>
  <thead>
    <th></th>
    <th></th>
    <th>Start</th>
    <th>End</th>
    <th>CheckIn Count</th>
  </thead>
  <% @events.each do |event| %>
    <tr>
      <td><strong><%= link_to event.name, event %></strong> â€“ <%= event.keyword %></td>
      <td><%= event.description %></td>
      <td><%= event.start_date.to_formatted_s(:MON_DAY) %></td>
      <td><%= event.end_date.to_formatted_s(:MON_DAY) %></td>
      <td><%= event.check_ins.count %></td>
    </tr>
  <% end %>
</table>
<% else %>
  <p>You don't have any events.</p>
<% end %>

<%= link_to 'Create Event', new_event_path, class: 'btn' %>