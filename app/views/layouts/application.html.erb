<!DOCTYPE html>
<html>
  <head>
    <title>Surveyor</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <nav>
      <div class="nav-wrap">
      	<a href="#" class="app-name">Surveyor</a>
	<%= link_to 'Polls', polls_path, class: "nav-item" %>
	<%= link_to 'Dispatches', dispatches_path, class: 'nav-item' %>
	<%= link_to 'Citizens', citizens_path, class: "nav-item" %>
	<%= link_to 'Users', users_path, class: "nav-item" %>

		<div id="user_info">
		  <ul class="list-inline">
	        <% if user_signed_in? %>
		      <li><%= current_user.email %></li>
		      <li><%=link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
			<% else %>
		      <li><%=link_to "Sign In", new_user_session_path %></li>
		      <li><%=link_to "Sign Up", new_user_registration_path %></li>
			<% end %>
	      </ul>
		</div>
      </div>
    </nav>

    <% flash.each do |name, msg| -%>
      <%= content_tag :div, msg, class: name %>
    <% end -%>

    <div id="yield">
	    <%= yield %>
	</div>
  </body>
</html>

